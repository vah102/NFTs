package application.controller;


import java.io.IOException;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Node;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.VBox;
import javafx.scene.text.Text;

public class HomeController extends MyController implements ICallUrl {
	
	private static final String URL = "application/HomePage.fxml" ;
	private static final String HEADER_STRING = "Trang chá»§" ;
	@FXML
	private VBox root;
	@FXML
	private Label header;
	
	public HomeController() {
		loadView();
	}
	public VBox getRoot() {
		return root ;
	}
	
	@FXML
	void showButtonPressed(ActionEvent event) {
		AnchorPane parent = (AnchorPane) ((Button) event.getSource()).getParent();
		for (Node child : parent.getChildren()) {
			if (child instanceof Text) {
				String title = ((Text) child).getText(); 
				call(title);
			}
		}
	}
	
	@Override
	public void loadView() {
		FXMLLoader fxmlLoader = new FXMLLoader(getClass().getClassLoader().getResource(URL));
		fxmlLoader.setController(this);
	      try {
	          root = fxmlLoader.load();
	      } catch (IOException e) {
	    	  e.printStackTrace();
	      }
	      header.setText(HEADER_STRING);
	}
	
	@Override
	public void call(MyController controller) {
		root.getChildren().clear();
		root.getChildren().add(controller.getRoot()); 
	}

}
