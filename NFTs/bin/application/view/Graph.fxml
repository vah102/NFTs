<VBox fx:id="root" prefHeight="610.0" prefWidth="903.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets left="20.0" right="20.0" />
    </padding>
   <children>
      <Label fx:id="header" alignment="CENTER" contentDisplay="CENTER" prefHeight="47.0" prefWidth="898.0" text="Opensea">
         <font>
            <Font name="Montserrat ExtraBold" size="32.0" />
         </font>
      </Label>
      <LineChart fx:id="chart" alternativeColumnFillVisible="true" titleSide="BOTTOM">
        <xAxis>
          <CategoryAxis label="Time" side="BOTTOM" fx:id="xAxis" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxis" label="Quantity" side="LEFT" />
        </yAxis>
      </LineChart>
      <Label text="Bài viết gợi ý">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <ScrollPane prefHeight="155.0" prefWidth="863.0" styleClass="scrollpane" stylesheets="@assets/style.css">
         <content>
            <VBox fx:id="showArea" prefHeight="98.0" prefWidth="841.0" />
         </content>
      </ScrollPane>
   </children>
</VBox>
